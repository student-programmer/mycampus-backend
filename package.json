{
  "name": "mycampus-backend",
  "version": "0.1.0",
  "description": "NestJS API project template crafted for Docker environments",
  "author": "MYC",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "node dist/server.js",
    "dev": "env-cmd -f .env nodemon",
    "build": "npm run clean && tsc",
    "test": "env-cmd -f .env jest --config=jest.json",
    "lint": "eslint -c .eslintrc.js --ext .ts 'src/**/*.ts'",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:migrate": "prisma migrate dev"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.12.0",
    "@nestjs/cli": "^11.0.4",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^10.3.0",
    "@nestjs/platform-socket.io": "^11.0.12",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/testing": "^10.3.0",
    "@nestjs/websockets": "^11.0.12",
    "bcrypt": "^5.1.1",
    "prisma": "5.22.0",
    "class-validator": "^0.14.1",
    "fastify": "^5.2.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@prisma/client": "5.22.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
